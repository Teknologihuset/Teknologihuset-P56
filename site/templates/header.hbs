<div id="headerArea">
    <div class="pageContent">
    <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {{#link-to "index"}}<img src="images/tekhuset_logo.png" class="headerLogo" />{{/link-to}}
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav toppmeny">
                <li class="menuPunkt">{{#link-to "booking.week" currentWeek}}BOOKING!{{/link-to}}</li>
                {{#each page in controllers.index.toppmenySider}}
                    {{#if page.childPages}}
                        <li class="uppercase dropdown menuPunkt">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{page.overskrift}} <b class="caret"></b></a>

                            <ul class="dropdown-menu">
                                {{#each child in page.childPages}}
                                    <li class="uppercase menuPunkt">{{#link-to "pages.page" child}}{{child.overskrift}}{{/link-to}}</li>
                                {{/each}}

                            </ul>
                        </li>
                    {{else}}
                        <li class="uppercase menuPunkt">{{#link-to "pages.page" page}}{{page.overskrift}}{{/link-to}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
    </div>
</div>