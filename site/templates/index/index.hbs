<div class="forside">
    {{#background-parallax photoUrl=forside.bilde}}
        <h1 class="large-page-header">{{forside.ingress}}</h1>
        <div class="large-page-content">
            {{forside.forsideInnhold}}
        </div>
        <div class="large-page-buttons">
            {{link-to "Book Dag" "booking" tagName="button" classNames="tn-btn tn-btn-rounded tn-btn-primary"}}
