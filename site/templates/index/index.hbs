    </div>
    }}



    <div class="index-contact-page">
        <h1 class="index-contact-header">{{kontakt.ingress}}</h1>
        <div class="index-contact-text">{{markdown kontakt.content}}</div>
    </div>

    <div class="index-community-events-page">
        <div class="community-event-button text-center" {{action "prevMonth"}}><i class="fa fa-2x fa-chevron-up"></i></div>
        <div class="row">
            <div class="col-md-6">
                <h1 class="index-contact-header">Community Events</h1>
                {{numberToMonth currMonth currYear}}
            </div>
            <div class="col-md-6 index-community-events-column">
                <div class="index-community-events-area">
                    {{#each ce in sortedCommunityEvents}}
                        {{community-event event=ce eventClicked="eventClicked"}}
                    {{else}}
                        <div class="ingen-community-event">Det er ingen Community event denne måneden.</div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="text-center"{{action "nextMonth"}}><i class="fa fa-2x fa-chevron-down"></i></div>
    </div>

