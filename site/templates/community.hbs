{{#if communityKriterier}}
    <div class="white-background">
        <div class="pageContent">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="large-text-header">{{communityKriterier.ingress}}</h1>
                    <div class="large-text-area">{{communityKriterier.forsideInnhold}}</div>
                    {{markdown communityKriterier.content}}
                    <div class="large-page-buttons">
                        {{link-to "Book Kveld" "communityBooking" tagName="button" classNames="tn-btn tn-btn-rounded tn-btn-warning pull-right"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}

<div class="white-background">
    <div class="pageContent">
        <h1 class="underscore-header">Communities</h1>
        <div class="partnerlogo">
            {{#each comm in controller.sortedCommunities}}
                <a {{bind-attr href=comm.http}}>
                    <img {{bind-attr src=comm.cLogo.href}} />
                </a>
            {{/each}}
        </div>
    </div>
</div>

{{#if communityUtenLogo}}
    <div class="white-background">
        <div class="pageContent">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="small-text-header">{{communityUtenLogo.overskrift}}</h1>
                    <div class="large-text-area">{{communityUtenLogo.ingress}}</div>
                    <div class="communities-without-logo">{{markdown communityUtenLogo.content}}</div>
                </div>
            </div>
        </div>
    </div>
{{/if}}
