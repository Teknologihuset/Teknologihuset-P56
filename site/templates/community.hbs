<div class="large-text-overview shaded-background">
    <div class="pageContent">
        <div class="row">
            <div class="col-md-8">
                <h1 class="large-text-header">{{page.ingress}}</h1>
                <div class="large-text-area">{{page.forsideInnhold}}</div>
            </div>
            <div class="col-md-4">
                <div class="large-page-buttons">
                    {{link-to "Book Kveld" "communityBooking" tagName="button" classNames="tn-btn tn-btn-rounded tn-btn-warning"}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="white-background">
    <div class="pageContent">
        {{#if controller.hasAtLeastTwoQuotes}}

            <div class="row community-quotes">
                {{#each quote in controller.currQuotes}}
                    <div class="col-md-6">
                        <div class="quotes-quote">
                            <i class="fa fa-quote-right quotes-style"></i>
                            <span class="quotes-text">{{quote.content}}</span>
                            <div class="quotes-from">{{quote.quoteFrom}}</div>
                        </div>
                    </div>
                {{/each}}
            </div>


        {{else}}
            No Quotes
        {{/if}}
    </div>
</div>

